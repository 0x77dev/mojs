use('assets/nesting-tree-traversal.js')

html, body
  padding 0
  margin 0
gap = 100px
.page
  background deeppink
  rect 100%
  position absolute
  nw 0
  overflow hidden
  &__inner
    overflow hidden
    position absolute
    rect 200*PX
    // nw 50%
    background orange
    border-radius 50%
    scale = 20
    backface-visibility hidden
    &.is-scaled
      .page__inner__inner
        transform scale(1/scale)
      transform scale(scale)
      transition all .5s linear
      
    &__inner
      transform-origin center top
      backface-visibility hidden
      transition all .5s linear

