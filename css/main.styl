use('assets/nesting-tree-traversal.js')

html, body
  padding 0
  margin 0
gap = 100px
.page
  background deeppink
  width 100%
  height 100%
  position absolute
  // nw 0
  overflow hidden
  startSize = 4px
  &__inner
    clip rect(0,3px,3px,0)
    // overflow hidden
    position absolute
    width startSize
    height startSize
    nw 0
    // top 0
    background orange
    border-radius 50%
    scale = 40
    backface-visibility hidden
    // opacity 0
    // &.is-scaled
    //   transform scale(scale)
    //   // transition all 1s linear
    //   .page__inner__inner
    //     transform scale(1/scale)
