use('assets/nesting-tree-traversal.js')

html, body
  padding 0
  margin 0
gap = 100px
originX = 1000px
originY = 40px
.page
  background deeppink
  width 100%
  height 1888px
  position absolute
  // nw 0
  overflow hidden
  startSize = 4px
  &__inner
    // clip rect(0,3px,3px,0)
    overflow hidden
    position absolute
    width startSize
    height startSize
    left originX
    top  originY
    background orange
    scale = 1280
    backface-visibility hidden
    // perspective-origin 1.996875px 50%
    perspective-origin 2px 2px
    perspective 1280px
    &.is-scaled
      transform scale(1*scale)
      transition transform 7s cubic-bezier(0.19, 1, 0.22, 1)
      .page__inner__inner
        transform translateZ(-1637000px)
        // transform scale(1/scale)
        transition transform 7s cubic-bezier(0.19, 1, 0.22, 1)
    &__inner
      width 1280px
      left - originX
      top  - originY
      position absolute
      // height 1280px
      backface-visibility hidden
      background orange
