use('assets/nesting-tree-traversal.js')

html, body
  padding 0
  margin 0
gap = 100px
.page
  background deeppink
  width 100%
  height 100%
  position absolute
  // nw 0
  overflow hidden
  startSize = 4px
  &__inner
    // clip rect(0,3px,3px,0)
    overflow hidden
    // border-radius 50%
    position absolute
    width startSize
    height startSize
    nw 0
    scale = 1280
    backface-visibility hidden
    perspective-origin 2px 2px
    perspective 1280px
    &.is-scaled
      transform scale(1*scale)
      transition transform 10s linear
      .page__inner__inner
        transform translateZ(-1635000px)
        // transform scale(1/scale)
        transition transform 10s linear
    &__inner
      width startSize
      height startSize
      backface-visibility hidden
      &__inner
        padding 450px 640px
        position relative
.content
  position absolute
  nw 0
  se 0
  // min-width 1280px
  // min-height 900px
  background purple
  // margin-left -640px
  // margin-top  -450px
  position absolute

