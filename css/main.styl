use('assets/nesting-tree-traversal.js')

html, body
  padding 0
  margin 0
gap = 100px
.page
  background deeppink
  rect 100%
  position absolute
  // nw 0
  overflow hidden
  startSize = 256px
  &__inner
    overflow hidden
    position absolute
    rect startSize
    nw 50%
    top 0
    background orange
    border-radius 50%
    scale = 40
    backface-visibility hidden
    opacity 0
    &.is-scaled
      transform scale(scale)
      // transition all 1s linear
      .page__inner__inner
        transform scale(1/scale)
    &__inner
      rect startSize
      backface-visibility hidden
      // transition all 1s linear
      // transform-origin center top
      &__inner
        padding 0 640px
        margin-left -640px
        background purple
