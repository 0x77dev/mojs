      width startSize
      height startSize
      // margin-left 1px
      // margin-top 1px
      backface-visibility hidden
      // transition all 1s linear
      // transform-origin center top
      &__inner
        padding 450px 640px
        // margin-left -640px
        position relative
    //     // background purple
.content
  position absolute
  nw 0
  se 0
  // min-width 1280px
  // min-height 900px
  background purple
  // margin-left -640px
